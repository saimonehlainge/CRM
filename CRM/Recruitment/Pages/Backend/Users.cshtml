@page
@model Recruitment.Pages.Backend.UsersModel
@{
    ViewData["Title"] = "Users";
    Layout = "_Layout_Backend";
}

<style>
    input::-ms-reveal {
        display: none;
    }
</style>

@Html.AntiForgeryToken()

<div class="page-wrapper">
    <div class="content container-fluid">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row">
                <div class="col">
                    <h3 class="page-title">Users</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Users</a></li>
                        <li class="breadcrumb-item active">Data Tables</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /Page Header -->
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header col-lg-12 row">
                        <div class="col-md-6">
                            <h4 class="card-title">Name</h4>
                            <input class="form-control" placeholder="ค้นหาชื่อพนักงาน" id="SearchName" />
                        </div>
                        <div class="col-md-12 text-end" style="margin-top:20px;">
                            <button class="col-lg-1 btn btn-sm btn-success" onclick="Search()">ค้นหา</button>
                        </div>
                    </div>
                    <div class="text-end" style="margin-right:20px;margin-top:20px">
                        <a class="btn btn-sm btn-success" asp-page="/Backend/Team">กำหนดทีมพนักงาน</a>
                        <a class="btn btn-sm btn-success" asp-page="/Backend/Permission">กำหนดสิทธิการใช้งาน</a>
                        <a class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal">เพิ่มข้อมูล</a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped" style="width:100%" id="example">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>UserName</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Add-->
<div class="modal" id="exampleModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">เพิ่มข้อมูล</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="AddForm" enctype="multipart/form-data">
                    <div class="row">
                        <div class="mb-3 mt-3 col-4">
                            <label class="form-label">ชื่อ</label>
                            <input type="text" class="form-control col-lg-12" name="Firstname" />
                        </div>
                        <div class="mb-3 mt-3 col-4">
                            <label class="form-label">นาม-สกุล</label>
                            <input type="text" class="form-control col-lg-12" name="Lastname" />
                        </div>
                        <div class="mb-3 mt-3 col-4">
                            <label class="form-label">UserName</label>
                            <input type="text" class="form-control col-lg-12" name="UserName" />
                        </div>
                        <div class="mb-3 mt-3 col-4">
                            <div class="form-login">
                                <label class="form-label">รหัส</label>
                                <div class="pass-group">
                                    <input type="password" class="form-control col-lg-12" name="RawPassword" id="RawPassword" />
                                    <span class="fas toggle-password fa-eye-slash" id="toggler"></span>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3 mt-3 col-4">
                            <label class="form-label">ที่อยู่</label>
                            <input type="text" class="form-control col-lg-12" name="Address" />
                        </div>
                        <div class="mb-3 mt-3 col-4">
                            <label class="form-label">กำหนดสิทธิ</label>
                            <select class="form-control" id="Role" name="RoleId"></select>
                        </div>
                        <div class="mb-3 mt-3 col-4">
                            <label class="form-label">แผนก</label>
                            <select class="form-control" id="department" name="DepartmentId"></select>
                        </div>
                        <div class="mb-3 mt-3 col-4">
                            <label class="form-label">โปรเจค</label>
                            <select class="form-control" id="project" name="ProjectId"></select>
                        </div>
                        <div class="mb-3 mt-3 col-4"></div>
                         <div class="mb-3 mt-3 col-4">
                            <label class="form-label">Target Kpi</label>
                            <input class="form-control" name="TargetKpi" />
                        </div>
                         <div class="mb-3 mt-3 col-4">
                            <label class="form-label">วันเริ่ม Target</label>
                            <input type="date" class="form-control" name="Targetdate" />
                        </div>
                        <div class="mb-3 mt-3 col-4">
                            <label class="form-label">วันสิ้นสุด Target</label>
                            <input type="date" class="form-control" name="Todate" />
                        </div>
                        <div class="mb-3 mt-3 col-4">
                            <label class="form-label">สถานะ Target</label>
                            <select class="form-control" name="StatusTarget">
                                <option value="-1">กรุณาเลือกรายงาน</option>
                                <option value="1">Kpi Success</option>
                                <option value="2">Not Pass Guarantee</option>
                                <option value="3">Joined - Wait for Kpi</option>
                                <option value="4">Wait for Join</option>
                            </select>
                        </div>
                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" id="Status" name="Status" onclick="checkSwitch()">
                            <label class="form-check-label" for="Status">IsActive</label>
                        </div>

                    </div>
                </form>
                <div class="submit-section">
                    <button class="btn btn-sm btn-secondary" type="button" data-bs-dismiss="modal">ปิด</button>
                    <button class="btn btn-sm btn-primary" onclick="submit_add()">เพิ่มข้อมูล</button>
                </div>
            </div>
        </div>
    </div>
</div>

