@section Scripts
{
    <script>
        var password = document.getElementById('RawPassword');
        var toggler = document.getElementById('toggler');
        var showHidePassword = () => {
            if (password.type == 'password') {
                password.setAttribute('type', 'text');
                toggler.classList.add('fa-eye-slash');
            } else {
                toggler.classList.remove('fa-eye-slash');
                password.setAttribute('type', 'password');
            }
        };
        toggler.addEventListener('click', showHidePassword);

        var password2 = document.getElementById('RawPassword2');
        var toggler2 = document.getElementById('toggler2');
        var showHidePassword2 = () => {
            if (password2.type == 'password') {
                password2.setAttribute('type', 'text');
                toggler2.classList.add('fa-eye-slash');
            } else {
                toggler2.classList.remove('fa-eye-slash');
                password2.setAttribute('type', 'password');
            }
        };
        toggler2.addEventListener('click', showHidePassword2);

        var oTable;
        $(() => {
            oTable = $('#example').DataTable({
                processing: true,
                serverSide: true,
                searching: true,
                lengthChange: true,
                fixedHeader: true,
                responsive: true,
                retrieve: false,
                ajax: {
                    type: 'post',
                    url: '/Backend/Users?handler=Table',
                    dataType: "json",
                    headers:
                    {
                        "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                    },
                },
                columns: [
                    { 'data': 'firstname', name: 'firstname' },
                    { 'data': 'firstname', name: 'firstname' },
                    {
                        'data': 'isActive', name: 'isActive',
                        render: function (data, type, row) {
                            var status = '';
                            if (data == 1 || data == null) {
                                status = 'ใช้งาน';
                            }
                            else {
                                status = 'ไม่ใช้งาน';
                            }
                            return status;
                        }
                    },
                    {
                        'data': 'id',
                        render: function (data, type, row) {
                            return '<center>' +
                                '<a class="btn btn-sm btn-warning" onclick="update(\'' + data + '\')" data-bs-toggle="modal" data-bs-target="#exampleEditModal"><i class="fa fa-edit" style="color:white"></i></a>' +
                                '&emsp;<a class="btn btn-sm btn-danger" onclick="change_delete(\'' + data + '\')"><i class="fa fa-trash" style="color:white"></a>' +
                                '</center>';
                        }
                    }
                ],
            });
            $.fn.dataTable.ext.errMode = 'throw';

            // โหลดข้อมูลอีกรอบ
            oTable.on('order.dt search.dt', function () {
                let i = 1;
                oTable.cells(null, 0, { search: 'applied', order: 'applied' })
                    .every(function (cell) {
                        this.data(i++);
                    });
            }).draw();

            permission();
            department();
            project();

        })

        function Search() {
            oTable.ajax.url("?handler=Table&&name=" + $("#SearchName").val()).load();
        }

        var check = 0;
        function checkSwitch() {
            if (document.getElementById("Status").checked == true) {
                check = 1;
            }
            else {
                check = 0;
            }
            $("#Status").val(check);
        }

        var check1 = 0;
        function checkSwitchEdit() {
            if (document.getElementById("EditStatus").checked == true) {
                check1 = 1;
            }
            else {
                check1 = 0;
            }
            $("#EditStatus").val(check1);
        }

        function submit_add() {
            var forms = $('#AddForm')[0];
            var data = new FormData(forms);
            $.ajax({
                type: 'post',
                url: '/Backend/Users?handler=AddData',
                data: data,
                processData: false,
                contentType: false,
                dataType: "json",
                headers:
                {
                    "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                },
                beforeSend: function () {
                    Swal.fire('กรุณารอสักครู่ กำลังทำรายการ')
                    Swal.showLoading()
                },
                success: function (data) {
                    if (data == 1) {
                        Swal.fire({
                            icon: 'success',
                            title: 'บันทึกข้อมูลเรียบร้อยแล้ว',
                            showConfirmButton: false,
                            timer: 3500
                        });
                        setTimeout(function(){
                              window.location.reload();
                            },2000)
                    } else {
                        Swal.fire({
                            icon: 'warning',
                            title: 'กรุณากรอกให้มีตัวใหญ่-เล็ก อักษรพิเศษ และตัวเลข',
                            text: 'ไม่มีข้อมูล กรุณาลองใหม่อีกครั้ง',
                        })
                    }
                },
                error: (e) => {
                    Swal.fire({
                        icon: 'error',
                        title: 'เกิดข้อผิดพลาดกับระบบ',
                        text: 'กรุณาติดต่อแอดมิน',
                    })
                }
            });
        }

        function update(id) {
            $.ajax({
                type: 'get',
                url: '/Backend/Users?handler=User',
                data: { Id: id },
                headers:
                {
                    "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                },
                success: function (data) {
                    $("#EditFirstname").val(data.user.firstname);
                    $("#EditLastname").val(data.user.lastname);
                    $("#EditUserName").val(data.user.userName);
                    $("#EditAddress").val(data.user.address);
                    $("#Editid").val(data.user.id);

                    $("#EditTargetKpi").val(data.user.targetKpi);
                    $("#EditTargetdate").val(data.user.targetdate);
                    $("#EditTodate").val(data.user.todate);

                    if(data.user.statusTarget != null)
                    {
                        document.getElementById('EditStatusTarget').value = data.user.statusTarget;
                    }
                    var check = '';
                    if (data.user.status == 1 || data.user.status == null) {
                        check = '<div class="form-group form-check" id="">' +
                            '<input type="checkbox" class="form-check-input" id="EditStatus" name="Status" value=' + data.user.status + ' checked  onclick="checkSwitchEdit()">' +
                            '<label class="form-check-label" for= "EditStatus"> IsActive </label>' +
                            '</div>';
                    }
                    else {
                        check = '<div class="form-group form-check" id="">' +
                            '<input type="checkbox" class="form-check-input" id="EditStatus" name="Status" onclick="checkSwitchEdit()">' +
                            '<label class="form-check-label" for= "EditStatus"> IsActive </label>' +
                            '</div>';
                    }
                    $("#check").html(check);
                    permission(data.role.roleId);
                    department(data.user.departmentId);
                    console.log(data.user)
                    project(data.user.projectId);
                },
                error: (e) => {
                    displayError(e);
                }
            })
        }

        function submit_edit() {
            var forms = $('#EditForm')[0];
            var data = new FormData(forms);
            $.ajax({
                type: 'post',
                url: '/Backend/Users?handler=EditData',
                data: data,
                processData: false,
                contentType: false,
                dataType: "json",
                headers:
                {
                    "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                },
                beforeSend: function () {
                    Swal.fire('กรุณารอสักครู่ กำลังทำรายการ')
                    Swal.showLoading()
                },
                success: function (data) {
                    if (data == 1) {
                        Swal.fire({
                            icon: 'success',
                            title: 'บันทึกข้อมูลเรียบร้อยแล้ว',
                            showConfirmButton: false,
                            timer: 3500
                        });
                        setTimeout(function(){
                              window.location.reload();
                            },2000)
                    } else if (data == 2) {
                        Swal.fire({
                            icon: 'warning',
                            title: 'เกิดข้อผิดพลาด',
                            text: 'ไม่มีข้อมูล กรุณาลองใหม่อีกครั้ง',
                        })
                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            title: 'เกิดข้อผิดพลาด',
                            text: 'ไม่มีข้อมูล กรุณาลองใหม่อีกครั้ง',
                        })
                    }
                },
                error: (e) => {
                    Swal.fire({
                        icon: 'error',
                        title: 'เกิดข้อผิดพลาดกับระบบ',
                        text: 'กรุณาติดต่อแอดมิน',
                    })
                }
            });
        }

        function change_delete(id) {
            Swal.fire({
                title: 'คุณต้องการเปลื่ยนการใช้งานนี้ ใช่หรือไม่',
                showDenyButton: true,
                confirmButtonText: 'ok',
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: 'get',
                        url: '/Backend/Users?handler=DeleteData',
                        data: { Id: id },
                        headers:
                        {
                            "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                        },
                        beforeSend: function () {
                            Swal.fire('กรุณารอสักครู่ กำลังทำรายการ')
                            Swal.showLoading()
                        },
                        success: function (data) {
                            if (data == 1) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'บันทึกข้อมูลเรียบร้อยแล้ว',
                                    showConfirmButton: false,
                                    timer: 3500
                                });
                                setTimeout(function(){
                              window.location.reload();
                            },2000)
                            } else if (data == 2) {
                                Swal.fire({
                                    icon: 'warning',
                                    title: 'เกิดข้อผิดพลาด',
                                    text: 'ไม่มีข้อมูล กรุณาลองใหม่อีกครั้ง',
                                })
                            }
                            else {
                                Swal.fire({
                                    icon: 'warning',
                                    title: 'เกิดข้อผิดพลาด',
                                    text: 'ข้อมูลรายการนี้เปิดใช้งานอยู่แล้ว',
                                })
                            }
                        },
                        error: (e) => {
                            Swal.fire({
                                icon: 'error',
                                title: 'เกิดข้อผิดพลาดกับระบบ',
                                text: 'กรุณาติดต่อแอดมิน',
                            })
                        }
                    });
                }
            })
        }

        function permission(id) {
            if (id != undefined) {
                $.ajax({
                    type: 'get',
                    url: '/Backend/Users?handler=Permission',
                    processData: false,
                    contentType: false,
                    dataType: "json",
                    headers:
                    {
                        "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                    },
                    success: function (data) {
                        var s = '<option value="-1">กรุณาเลือกรายการ</option>';
                        $.each(data, function (v, c) {
                            var selected = '';
                            if (c.id == id) {
                                selected = 'selected';
                            }
                            s += '<option value="' + c.id + '" ' + selected + '>' + c.name + '</option>';
                        });
                        $("#Role").html(s);
                        $("#EditRole").html(s);
                    },
                    error: (e) => {
                        displayError(e);
                    }
                })
            }
            else {
                $.ajax({
                    type: 'get',
                    url: '/Backend/Users?handler=Permission',
                    processData: false,
                    contentType: false,
                    dataType: "json",
                    headers:
                    {
                        "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                    },
                    success: function (data) {
                        var s = '<option value="-1">กรุณาเลือกรายการ</option>';
                        $.each(data, function (v, c) {
                            s += '<option value="' + c.id + '">' + c.name + '</option>';
                        });
                        $("#Role").html(s);
                        $("#EditRole").html(s);
                    },
                    error: (e) => {
                        displayError(e);
                    }
                })
            }
        }

        function department(id) {
            if (id != undefined) {
                $.ajax({
                    type: 'get',
                    url: '/Backend/Users?handler=Department',
                    processData: false,
                    contentType: false,
                    dataType: "json",
                    headers:
                    {
                        "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                    },
                    success: function (data) {
                        var s = '<option value="-1">กรุณาเลือกรายการ</option>';
                        $.each(data, function (v, c) {
                            var selected = '';
                            if (c.id == id) {
                                selected = 'selected';
                            }
                            s += '<option value="' + c.id + '" ' + selected + '>' + c.name + '</option>';
                        });
                        $("#department").html(s);
                        $("#Editdepartment").html(s);
                    },
                    error: (e) => {
                        displayError(e);
                    }
                })
            }
            else {
                $.ajax({
                    type: 'get',
                    url: '/Backend/Users?handler=Department',
                    processData: false,
                    contentType: false,
                    dataType: "json",
                    headers:
                    {
